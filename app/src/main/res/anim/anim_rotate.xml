<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="650"
    android:pivotX="50%"
    android:pivotY="50%"
    android:duration="3000"
    android:fillBefore="true">

</rotate>

<!--
    Degrees:
        360 Degrees is one circle, so you can select your number of rotations by degrees
    Pivot:
        Similar to Scale, you can select where the animation will pivot at
-->